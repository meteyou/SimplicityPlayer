[DEFAULT]
logfile = SimplicityPlayer.log
rfid_read_delay = 2
audiobooksPath = /var/lib/mpd/music
toggle_button_pin = 16

[LCDModule]
enabled = true

[MPDModule]
host = localhost
port = 6600
timeout = 10

[WebServerModule]
host = 0.0.0.0
port = 5000

[StateManagerModule]
stateFilePath = data/states.json

[TagManagerModule]
tagsFilePath = data/tags.json

[RFIDModule]
# sleep time in seconds between RFID tag polling
polling_sleep = 0.5

[USBModule]
path = /media/pi/audiobooks
